<% include Basic\top %>
<div class="ui main text container">
  <div class="ui huge header">Welcome To Saikat's Blog</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach(function(blogs){ %>
        <div class="item">
          <div class="image">
            <img src="<%= blogs.img %>">
          </div>
          <div class="contant">
            <a href="/blogs/<%= blogs._id %>" class="header"><%= blogs.title %></a>
            <div class="meta">
              <span><%= blogs.date.toDateString() %></span>
            </div>
            <div class="description">
              <p><%- blogs.body.substring(0,100) %>. . .</p>
            </div>
            <div class="extra">
              <a href="/blogs/<%= blogs._id %>" class="ui flooted  basic violet button">Read More <i class="Chevron Right icon"></i></a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>

<% include Basic\bottom %>
